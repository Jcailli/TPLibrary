{% extends 'base.html.twig' %}

{% block title %}Borrowing index{% endblock %}

{% block body %}
    <h1>Liste des Emprunts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>BorrowingDate</th>
                <th>ReturnDate</th>
                <th>Returned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.borrowingDate ? borrowing.borrowingDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrowing.returnDate ? borrowing.returnDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrowing.returned ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_borrowing_show', {'id': borrowing.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_borrowing_edit', {'id': borrowing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
