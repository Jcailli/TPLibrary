{% extends 'base.html.twig' %}

{% block title %}Borrowings index{% endblock %}

{% block body %}
    <h1>Borrowings in progress</h1>

    <table class="table">
        <thead>
            <tr>
                <th>BorrowingDate</th>
                <th>ReturnDate</th>
                <th>Returned</th>
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.borrowingDate ? borrowing.borrowingDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrowing.returnDate ? borrowing.returnDate|date('Y-m-d') : '' }}</td>
                <td>{{ borrowing.returned ? 'Yes' : 'No' }}</td>
                <td>{{ borrowing.user.userFirstName }} {{ borrowing.user.username }}</td>
                <td>
                    <twig:Button type="show" path="{{ path('app_borrowing_show', {'id': borrowing.id}) }}"/>
                    <twig:Button type="edit" path="{{ path('app_borrowing_edit', {'id': borrowing.id}) }}"/> {# TODO : create a return route #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
