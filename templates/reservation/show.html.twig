{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Book</th>
                <td>{{ reservation.bookVersion.book.name }}</td>
            </tr>
            <tr>
                <th>Book Version</th>
                <td>{{ reservation.bookVersion.name }}</td>
            </tr>
            <tr>
                <th>Authors</th>
                <td>
                    {% for author in reservation.bookVersion.book.authors %}
                        {{ author.name }} {{ author.firstName }} <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ reservation.bookVersion.publisher.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_reservation_user_index') }}">back to list</a>
{% endblock %}
