{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('IS_AUTHENTICATED') %}
        <h1 class="text-center">Bonjour {{ user.userFirstName }} {{ user.username }}</h1>

        <p class="text-center">Bienvenue dans ta librairie préférée</p>
    {% else %}
        <h1 class="text-center">Bonjour,</h1>

        <p class="text-center">Merci de te connecter ou de te créer un compte pour entrer dans ta bibliothèque favorite.</p>
    {% endif %}
    <img class="img-fluid" src="https://expodif.fr/wp-content/uploads/2022/04/Bibliotheque-de-livres.png" alt="bibliothèque">
</div>
{% endblock %}
