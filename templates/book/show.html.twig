{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
        </tbody>
    </table>

    <twig:Button type="back" path="{{ path('app_book_index') }}"/>

    <twig:Button type="edit" path="{{ path('app_book_edit', {'id': book.id}) }}"/>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
