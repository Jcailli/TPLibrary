<form method="post" action="{{ path('app_publisher_delete', {'id': publisher.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publisher.id) }}">
    <button class="btn btn-danger icon-link"><twig:ux:icon class="bi" name="bi:trash" /> Delete</button>
</form>
