{% extends 'base.html.twig' %}

{% block title %}BookVersion index{% endblock %}

{% block body %}
    <h1>BookVersion Can Be Reserved</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Version Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for book_version in book_versions %}
            <tr>
                <td>{{ book_version.book.name }}</td>
                <td>{{ book_version.name }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_reservation_new_from_book_list', {'bookVersionId': book_version.id}) }}">reserve</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no books to reserve</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
