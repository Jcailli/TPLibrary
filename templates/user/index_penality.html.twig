{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <div data-controller="symfony--ux-swup--swup" id="swup" data-turbo="false">
        <table class="table">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Penality</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.userFirstName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.penality }} â‚¬</td>
                    <td>
                        <twig:Button type="edit" path="{{ path('app_user_penality_edit', {'id': user.id}) }}"/>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if pages > 1 %}
            <div class="mt-3">
                <nav>
                    <ul class="pagination">
                        {% for num in 1..pages %}
                            <li class="page-item">
                                <a href="{{ path('app_user_penality_index', num > 1 ? {page: num} : {}) }}"
                                   class="page-link {{ page == num ? "active" : "" }}"
                                   aria-current="{{ page == num ? 'true' : 'false' }}">
                                    {{ num }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>
{% endblock %}
