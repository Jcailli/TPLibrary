{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>UserName</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Penality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_LIBRARIAN" %}
                            Biblioth√©caire
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ user.username }}</td>
                <td>{{ user.userFirstName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.penality }}</td>
                <td>
                    <twig:Button type="show" path="{{ path('app_user_show', {'id': user.id}) }}"/>
                    <twig:Button type="edit" path="{{ path('app_user_edit', {'id': user.id}) }}"/>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
