{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>FirstName</th>
            <td>{{ user.userFirstName }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Reservations</th>
            <td>
                {% for reservation in user.reservations %}
                    {{ reservation.bookVersion.book.name }} - {{ reservation.bookVersion.name }}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Borrowings</th>
            <td>
                {% for borrowing in user.borrowings %}
                    {{ borrowing.bookVersion.book.name }} - {{ borrowing.bookVersion.name }} : return date ({{ borrowing.returnDate | date('d-m-Y') }})
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

    <twig:Button type="back" path="{{ path('app_user_penality_index') }}"/>
{% endblock %}
