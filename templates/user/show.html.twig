{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_LIBRARIAN" %}
                            Biblioth√©caire
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.userFirstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Penality</th>
                <td>{{ user.penality }}</td>
            </tr>
        </tbody>
    </table>

    <twig:Button type="back" path="{{ path('app_user_index') }}"/>

    <twig:Button type="edit" path="{{ path('app_user_edit', {'id': user.id}) }}"/>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
