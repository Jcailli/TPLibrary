{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Max Borrow</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.userFirstName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.maxBorrow }}</td>
                <td>
                    <twig:Button type="edit" path="{{ path('app_user_edit_librarian', {'id': user.id}) }}"/>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
